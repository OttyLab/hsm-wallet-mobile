<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MultisigWallet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sub</item>
        <item name="colorPrimaryVariant">@color/accent</item>
        <item name="colorOnPrimary">@color/base</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.ToolBarBase" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/Theme.ToolBar</item>
    </style>
    <style name="Theme.ToolBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@color/accent</item>
        <item name="android:textColorPrimary">@color/base</item>
    </style>
</resources>